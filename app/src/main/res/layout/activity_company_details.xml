<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyDetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView121"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="50dp"
        app:cardCornerRadius="120dp">

        <ImageView
            android:id="@+id/img_company_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_company_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView121"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        tools:text="Company Name"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/desc_company_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_company_details"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="32sp"
        tools:text="company description here..." />

    <TextView
        android:id="@+id/authorization_status_details_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/verify_company_details_activity_tv"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        tools:text="Status: Unauthorized" />

    <TextView
        android:id="@+id/verify_company_details_activity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seePdf_tv_details"
        android:layout_centerInParent="true"
        android:text="Authorize company"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/seePdf_tv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seeAllSpaceShips_tv_company_details"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="12dp"
        android:background="#95F67952"
        android:gravity="center"
        android:text="SEE COMPANY LICENSE"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/seeAllSpaceShips_tv_company_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#95F67952"
        android:gravity="center"
        android:text="See All SpaceShips"
        android:textColor="@color/white"
        android:textSize="32sp" />

</RelativeLayout>