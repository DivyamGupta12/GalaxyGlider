<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Select Time Slot"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:stretchColumns="*"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <!-- Table Header -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/starting_time"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/ending_time"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/seat_available"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Rows 1-8 -->
        <TableRow>
            <!-- Row 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:id="@+id/slot03_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="12"
                android:theme="@style/TableTextView" />
            <!-- Add your slot selection widget for Row 1 here -->
        </TableRow>

        <!-- Repeat TableRow for Rows 2-8 with appropriate time values and slot selection widgets -->

        <!-- Example for Row 2 -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:id="@+id/slot36_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/TableTextView" />
            <!-- Add your slot selection widget for Row 2 here -->
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:id="@+id/slot69_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/TableTextView" />
            <!-- Add your slot selection widget for Row 2 here -->
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:id="@+id/slot9_12_show"
                android:layout_width="match_parent"
