        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:id="@+id/slot12_15_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/TableTextView" />
            <!-- Add your slot selection widget for Row 2 here -->
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:id="@+id/slot15_18_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/TableTextView" />
            <!-- Add your slot selection widget for Row 2 here -->
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:id="@+id/slot18_21_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/TableTextView" />
            <!-- Add your slot selection widget for Row 2 here -->
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24:00"
                android:theme="@style/TableTextView" />

            <TextView
                android:id="@+id/slot21_24_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/TableTextView" />
            <!-- Add your slot selection widget for Row 2 here -->
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
