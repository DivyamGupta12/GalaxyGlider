<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_details_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="634dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-35dp">

        <TextView
            android:id="@+id/spaceShipName_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="5dp"
            android:textSize="32sp"
            tools:text="Company Name" />

        <TextView
            android:id="@+id/spaceShip_price_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            tools:text="Price" />

        <TextView
            android:id="@+id/spaceShip_speed_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            tools:text="Speed" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seats_spaceShip_details_activity"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                tools:text="Seats available" />

            <TextView
                android:id="@+id/spaceShip_rating_details_activity"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                tools:text="Ratings" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/spaceShip_busyTime_details_activity"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                tools:text="Busy Time" />

            <TextView
                android:id="@+id/spaceShip_rideSharing_details_activity"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                tools:text="Have Ride Sharing" />

        </LinearLayout>

        <TextView
            android:id="@+id/desc_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="this is description of your spaceshp"
            android:textSize="18sp"
            android:layout_margin="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_margin="12dp"
            android:text="Reviews"
            android:textSize="28sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_details_activity"
            android:layout_width="match_parent"
            android:layout_height="218dp" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:elevation="40dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="100dp"
            app:cardCornerRadius="120dp">

            <ImageView
                android:id="@+id/img_SpaceShip_details_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
