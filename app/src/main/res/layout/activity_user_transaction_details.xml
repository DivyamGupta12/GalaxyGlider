<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="8dp">


        <TextView
            android:id="@+id/userName_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/userEmail_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mail@gmail.com"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/companyName_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company name"
            android:textColor="@color/white"
            android:textSize="32sp"/>


        <TextView
            android:id="@+id/spaceShipName_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SpaceShip name"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/from_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/to_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/distance_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distance"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/price_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textColor="@color/white"
            android:textSize="32sp"/>


        <TextView
            android:id="@+id/seatsChosen_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seatsChosen"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/time_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/transactionId_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="transaction id"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/isOngoing_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not completed"
            android:textColor="@color/purple_700"
            android:textSize="32sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/complete_transaction_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journey Completed"
                android:layout_margin="4dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="38sp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>