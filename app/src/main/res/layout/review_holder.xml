<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/reviewer_name_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18sp"
                android:layout_marginTop="18sp"
                android:layout_marginEnd="18sp"
                android:layout_marginBottom="18sp"
                android:textSize="18sp"
                tools:text="Reviewer Name" />

            <TextView
                android:id="@+id/reviewer_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reviewer_name_holder"
                android:layout_marginStart="18sp"
                android:layout_marginTop="18sp"
                android:layout_marginEnd="18sp"
                android:layout_marginBottom="18sp"
                android:textSize="18sp"
                tools:text="A review is an evaluation of a publication, product, service." />

            <TextView
                android:id="@+id/rating_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reviewer_holder"
                android:layout_marginStart="18sp"
                android:layout_marginTop="18sp"
                android:layout_marginEnd="18sp"
                android:layout_marginBottom="18sp"
                android:textSize="18sp"
                tools:text="4.0" />

            <TextView
                android:id="@+id/date_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating_holder"
                android:layout_marginStart="18sp"
                android:layout_marginTop="18sp"
                android:layout_marginEnd="18sp"
                android:layout_marginBottom="18sp"
                android:textSize="18sp"
                tools:text="22/04/2023 18:45 hrs" />

        </RelativeLayout>

</androidx.cardview.widget.CardView>
