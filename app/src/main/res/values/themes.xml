<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NewApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >

        <item name="colorPrimary">@color/blackPrimaryShade</item>
        <item name="colorPrimaryVariant">@color/blackPrimaryShade</item>
        <item name="colorOnPrimary">@color/impureWhite</item>
        <item name="colorPrimaryDark">@color/blackPrimaryShade</item>
        <item name="android:navigationBarColor">@color/blackPrimaryShade</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blackPrimaryShade</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorSwitchThumbNormal">#ffffff</item>

    </style>

    <style name="BrandedSwitch.text" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#ffa000</item>
        <item name="android:textSize">9sp</item>
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.NewApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Define the style for the text views in the table -->
    <style name="TableTextView">
        <item name="android:background">@color/blackPrimaryShade</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TableTextViewForSlots">
        <item name="android:background">#FF1744</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
    </style>



</resources>